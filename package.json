{
  "name": "discord-bot-template",
  "version": "0.6.0",
  "description": "simple discord bot template with typescript",
  "keywords": [],
  "author": "y.abderrahmane",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "start": "node --enable-source-maps dist/index.js",
    "dev":"",
    "dev:ts": "nodemon src/index.ts",
    "bun": "bun dist/index.js",
    "bun:ts": "bun src/index.ts",
    "clean": "rimraf dist",
    "compile": "tsc",
    "build": "npm run clean && npm run compile && npm run start",
    "format": "prettier --write src/**/*.ts",
    "lint:check": "eslint . --ignore-pattern .gitignore",
    "lint:fix": "npm run lint:check -- --fix"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "discord.js": "^14.16.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "figlet": "^1.7.0",
    "mongoose": "^8.3.4"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/figlet": "^1.5.8",
    "@types/node": "^20.12.11",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unicorn": "^57.0.0",
    "prettier": "^3.5.2",
    "rimraf": "^6.0.1"
  }
}
